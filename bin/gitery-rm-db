#!/bin/sh -efu

. gitery-sh-functions

PROG=gitery-rm-db

usage()
{
	echo >&2 "$PROG: $*"
	echo >&2 "usage: $PROG <directory>"
	exit 1
}

[ "$#" -ge 1 ] ||
	usage 'Not enough arguments.'
[ "$#" -eq 1 ] ||
	usage 'Too many arguments.'

dir0="$1"; shift

cd

dir="$(validate_user_exported_gitdir "$dir0")"
rm -rf -- "$dir"
